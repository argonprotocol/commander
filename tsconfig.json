{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@argonprotocol/commander-core": ["./core/src/index.ts"],
      "@argonprotocol/cli": ["./cli/src/index.ts"],
      "@argonprotocol/commander-bot": ["./bot/src/index.ts"]
    }
  },
  "include": [
    "src-vue/**/*.ts",
    "src-vue/**/*.d.ts",
    "src-vue/**/*.tsx",
    "src-vue/**/*.vue",
    "scripts",
    "eslint.config.ts",
    "bot/**/*.ts",
    "cli/**/*.ts",
    "core/**/*.ts",
  ],
  "exclude": [
    "**/*.js",
    "e2e"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
